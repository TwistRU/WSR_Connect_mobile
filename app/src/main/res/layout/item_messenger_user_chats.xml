<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="18dp"
    android:layout_marginTop="18dp"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="6dp">

    <com.daimajia.swipe.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/muteBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:padding="0dp"
                app:backgroundTint="@color/blue_input"
                app:cornerRadius="0dp"
                app:icon="@drawable/ic_volume_off"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:iconTint="@color/blue_light" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pinBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="0dp"
                app:backgroundTint="@color/purple_500"
                app:cornerRadius="0dp"
                app:icon="@drawable/ic_pin"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="22dp"
                app:iconTint="@color/blue_light" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/quitBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="0dp"
                app:backgroundTint="@color/red_light"
                app:cornerRadius="0dp"
                app:icon="@drawable/ic_exit"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:iconTint="@color/blue_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chatImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ava_example2"
                app:civ_border_color="@color/blue_input"
                app:civ_border_width="1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/chatName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/pin"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/plug"
                            android:paddingHorizontal="10dp"
                            android:src="@drawable/ic_pin"
                            android:visibility="gone"
                            app:tint="@color/blue_input" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lastMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/notificationIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="30dp"
                    android:contentDescription="@string/plug"
                    android:src="@drawable/ic_volume_off"
                    android:visibility="gone"
                    app:tint="@color/blue_input" />
            </RelativeLayout>
        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>
</androidx.cardview.widget.CardView>