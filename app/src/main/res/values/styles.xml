<resources>
    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog.MinWidth">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:textColorHint">@color/blue_input</item>
        <item name="colorPrimary">@color/blue_input</item>
        <item name="colorPrimaryVariant">@color/blue_input</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_input</item>
        <item name="colorSecondaryVariant">@color/blue_input</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:backgroundTint">@color/blue_light</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/blue_input</item>
        <item name="colorOnPrimary">@color/blue_light</item>
    </style>
</resources>